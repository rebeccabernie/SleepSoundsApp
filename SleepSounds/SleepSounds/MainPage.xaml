<Page
    x:Class="SleepSounds.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:SleepSounds"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <!-- Code for adding custom fonts adapted from 
         http://www.c-sharpcorner.com/article/custom-fonts-in-windows-10-uwp-app/-->

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <Grid Background="Black" VerticalAlignment="Top" Height="40">
            <TextBlock x:Name="title" Text="Sleep Sounds"
                   FontFamily="Assets/Pacifico.ttf#Pacifico" Foreground="White" FontSize="20"
                   FontStyle="Italic" 
                   HorizontalAlignment="Center" TextWrapping="Wrap" VerticalAlignment="Center"/>
        </Grid>
        <Grid Background="Black" Margin="0,40,0,0">

            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>

    <!-- Buttons -->
            <!-- Quicksand_Light is in Quicksand font family -->

            <Button Grid.Row="0" x:Name="rainButton" Content="Rain" Foreground="White"
                    FontFamily="Assets\Quicksand_Light.otf#Quicksand" FontSize="25" FontWeight="Bold"
                    HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="0,0,0,0" Click="rainButton_Click">

                <!-- Image as background code adapted from 
                http://stackoverflow.com/questions/15892290/how-to-change-set-background-image-of-a-button-in-c-sharp-wpf-code -->
                <Button.Background>
                    <ImageBrush ImageSource ="Assets/BtnImgs/rain.jpg"></ImageBrush>
                </Button.Background>

            </Button>

            <Button Grid.Row="1" x:Name="wavButton" Content="Waves" Foreground="White" 
                    FontFamily="Assets\Quicksand_Light.otf#Quicksand" FontSize="25" FontWeight="Bold"
                    HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="0,0,0,0">

                <!-- Image as background code adapted from 
                http://stackoverflow.com/questions/15892290/how-to-change-set-background-image-of-a-button-in-c-sharp-wpf-code -->
                <Button.Background>
                    <ImageBrush ImageSource ="Assets/BtnImgs/rain.jpg"></ImageBrush>
                </Button.Background>

            </Button>

    <!-- Sound Files - can't be inside <Button> tags -->
            <MediaElement x:Name="medrain" AutoPlay="False" Source="Assets/Sounds/medrain.mp3" />

        </Grid>
    </Grid>
</Page>
